{
  "info": {
    "name": "社交型 Todo API",
    "description": "完整的 API 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "认证",
      "item": [
        {
          "name": "注册",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"张三\",\n  \"email\": \"zhangsan@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "登录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"zhangsan@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "用户",
      "item": [
        {
          "name": "获取当前用户信息",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "description": "登录后获得的 token"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "搜索用户",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/users/search?username=张三",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "users", "search"],
              "query": [
                {
                  "key": "username",
                  "value": "张三"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Todo",
      "item": [
        {
          "name": "创建 Todo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"每天跑步 5 公里\",\n  \"description\": \"坚持运动，保持健康\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/todos",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "todos"]
            }
          }
        },
        {
          "name": "获取我的 Todo 列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/todos",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "todos"]
            }
          }
        },
        {
          "name": "更新 Todo（标记完成）",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_completed\": true\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/todos/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "todos", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "排行榜",
      "item": [
        {
          "name": "获取排行榜",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/rankings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "rankings"]
            }
          }
        }
      ]
    }
  ]
}
